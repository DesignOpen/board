  "license": "GPLv3",
  "dependencies": {
    "bluebird": "^2.9.4",
    "body-parser": "1.11.0",
    "cookie-parser": "1.3.3",
    "errorhandler": "^1.3.3",
    "express": "4.11.2",
    "express-session": "1.10.2",
    "log4js": "^0.6.22",
    "mongoose": "3.8.22",
    "passport": "^0.2.1",
    "react": "^0.12.2",
    "react-router": "^0.12.0"
  },
  "scripts": {
    "tmux": "./tools/tmux",
    "start": "node src/server.js",
    "debug-server": "node-debug --debug-brk false src/server.js",
    "build": "npm run build-js && npm run build-less",
    "build-js": "browserify src/frontend/scripts/main.jsx -t reactify -o src/frontend/bundle.js",
    "build-styles": "npm run build-stylus && npm run autoprefixer",
    "build-stylus": "stylus --include-css -o src/frontend/bundle.css src/frontend/styles/main.styl",
    "autoprefixer": "autoprefixer src/frontend/bundle.css",
    "watch": "npm run watch-js & npm run watch-styles",
    "watch-js": "watchify src/frontend/scripts/main.jsx -d -v -t reactify -o src/frontend/bundle.js",
    "watch-styles": "watch 'npm run build-styles' src/frontend/styles/"
  },
  "devDependencies": {
    "reactify": "^1.0.0"
  }
}
