/*
Rules related to page layout. These rules
define where for example page content, header and footer are.
*/

.app > *
  display flex

.page
  flex 1

.footer
  width 100%


@media all and (min-width: 800px)
  .header
    position absolute
    right 0
    border-left 1px solid #e6e6e6
    border-bottom 0
    height 100%
    padding 0 15px
    width 250px

  .footer
    position absolute
    right 0
    bottom 0
    padding 20px 15px
    width 250px
