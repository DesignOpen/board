.app > *
  display flex

.page
  flex 1

.header
  background #f2f2f2
  border-bottom 1px solid #e6e6e6z

.header logo

.header h1
  font-weight 700
  color: #cf4
  text-transform uppercase

.header span
  display table
  margin 0 auto
  text-align center

.header span:first-child
  font-size 36px
  color #3d3d3d

.header span:last-child
  font-size 30px
  color #f2f2f2
  background #3d3d3d

.footer
  background #f2f2f2
  width 100%


@media all and (min-width: 800px)
  .header
    position absolute
    right 0
    border-left 1px solid #e6e6e6
    border-bottom 0
    height 100%
    padding 0 15px
    width 250px

  .footer
    position absolute
    right 0
    bottom 0
    padding 20px 15px
    width 250px
