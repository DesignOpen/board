h3
  font-size $font-size-large

.post-info
  width 100%
  padding 0
  margin 0

  .post-author-avatar
    margin-top 20px
    width: 110px
    text-align center

    img
      width 100%
      max-width 100px
      border-radius 50%

    .post-author-name
      font-size: 0.9rem
      margin-top 2px

@media all and (min-width: 800px)
  .post-info
    width 200px

